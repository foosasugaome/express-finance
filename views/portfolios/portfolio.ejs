<div class="flex-container">
  <div class="card">
    <h4>Portfolio</h4>
    <br>
    <h6><%=message%></h6>
    <hr>
    <br>
    <%if(portfolio) {%>
      <table>
      <% portfolio.forEach(e => { %>      
        <tr>
          <td>
            <a href="/portfolio/details/<%=e.id%>"><%= e.portfolioname %> </a>
          </td>
          <td>
            <form action="/portfolio/<%=e.id%>?_method=DELETE" method="POST">
              <button class="btn-link" >Delete </button>
            </form>            
          </td>
        </tr>
      <%})%>     
    </table>
      <br>
      <br>
    
      <p class="sub-header"><a href="/portfolio/add">âž• Portfolio</a></p>
      <%}%>
  </div>
</div>



