<div class="container-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Watchlist</h4>
      <h6 class="card-subtitle mb-2 text-muted"><p class="text-warning"><%=message%></p></h6>

    <%if(watchlist) {%>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Symbol</th>
                    <th scope="col">Name</th>
                    <th scope="col">Current Price</th>                
                    <th scope="col">Day Change</th>
                    <th scope="col">Day Change(%)</th>
                    <th scope="col">&nbsp;</th>
                </tr>
            </thead>
            <tbody>                
             <% watchlist.stonks.forEach(e=>{ %> 
                <tr>
                    <td><a href="/company/<%= e.symbol%>"><%= e.symbol%></a></td>
                    <td><a href="/company/<%= e.symbol%>"><%= e.name%></a></td>            
                    <td><%= e.quotes.c%></td>
                    <td><% if(e.quotes.d < 0){ %>
                        <p class="badge bg-danger">
                      <%}else{%>
                        <p class="badge bg-success">
                      <%}%><%= e.quotes.d%></p</td>
                    <td><% if(e.quotes.dp < 0){ %>
                        <p class="badge bg-danger">
                      <%}else{%>
                        <p class="badge bg-success">
                      <%}%>
                        <%= e.quotes.dp%></p></td>
                    <td><a href="/portfolio/to?symbol=<%=e.symbol%>&name=<%=e.name%>">âž• Portolio</a></td>
                </tr>
             <% }) %> 
            </tbody>
        </table>
    <%}%>
      </div>
      </div>
  </div>
  